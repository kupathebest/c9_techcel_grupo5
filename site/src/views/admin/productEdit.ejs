                                <input type="text" name="fiveg" id="fiveg" value="<%= mobile.fiveg %> ">
                                <span class="">
                                    <%= locals.errores && errores.fiveg ? errores.fiveg.msg : null %>
                                </span>
                            </div>
                            <div class="centrar">
                                <label for="gprs">GPRS</label>
                                <input type="text" name="gprs" id="gprs" value="<%= mobile.gprs %> ">

                            </div>
                            <div class="centrar">
                                <label for="sim">SIM</label>
                                <input type="text" name="sim" id="sim" value="<%= mobile.sim %> ">

                            </div>
                        </div>
                        <div class="camara bloque">
                            <div>
                                <h2 class="centrar-titulos"> Cámaras</h2>
                            </div>
                            <div class="centrar">
                                <label for="mainCamera">Cámara Principal</label>
                                <input type="text" name="mainCamera" id="mainCamera"
                                    value="<%= mobile.mainCamera %> ">

                            </div>
                            <div class="centrar">
                                <label for="videoCamera">Cámara Video</label>
                                <input type="text" name="videoCamera" id="videoCamera"
                                    value="<%= mobile.videoCamera %> ">

                            </div>
                            <div class="centrar">
                                <label for="frontCamera">Cámara Frontal</label>
                                <input type="text" name="frontCamera" id="frontCamera"
                                    value="<%= mobile.frontCamera %> ">

                            </div>
                        </div>

                        <div class="bateria  bloque">
                            <div>
                                <h2 class="centrar-titulos"> Bateria</h2>
                            </div>


                            <div class="centrar">
                                <label for="fastCharge">Carga Rápida</label>
                                <input type="text" name="fastCharge" id="fastCharge"
                                    value="<%= mobile.fastCharge %> ">

                            </div>
                            <div class="centrar">
                                <label for="wirelessCharge">Carga Inalambrica</label>
                                <input type="text" name="wirelessCharge" id="wirelessCharge"
                                    value="<%= mobile.wirelessCharge %> ">

                            </div>

                        </div>


                        <div class="conectividad  bloque">
                            <div>
                                <h2 class="centrar-titulos"> Conectividad</h2>
                            </div>
                            <div class="centrar">
                                <label for="wifi">Wi-Fi</label>
                                <input type="text" name="wifi" id="wifi" value="<%= mobile.wifi %> ">

                            </div>
                            <div class="centrar">
                                <label for="bluetooth">Bluetooth</label>
                                <input type="text" name="bluetooth" id="bluetooth" value="<%= mobile.bluetooth %> ">
                                <span class="">
                                    <%= locals.errores && errores.bluetooth ? errores.bluetooth.msg : null %>
                                </span>
                            </div>
                            <div class=" centrar">
                                <label for="gps">GPS</label>
                                <input type="text" name="gps" id="gps" value="<%= mobile.gps %> ">

                            </div>
                            <div class="centrar">
                                <label for="usb">USB</label>
                                <input type="text" name="usb" id="usb" value="<%= mobile.usb %> ">
                                <span class="">
                                    <%= locals.errores && errores.usb ? errores.usb.msg : null %>
                                </span>
                            </div>
                            <div class="centrar">
                                <label for="nfc">NFC</label>
                                <input type="text" name="nfc" id="nfc" value="<%= mobile.nfc %> ">

                            </div>
                            <div class="centrar">
                                <label for="infrared">Infrarrojo</label>
                                <input type="text" name="infrared" id="infrared" value="<%= mobile.infrared %> ">

                            </div>

                        </div>
                        <div class="display  bloque">
                            <div>
                                <h2 class="centrar-titulos"> Display</h2>
                            </div>
                            <div class="centrar">
                                <label for="displayType">Display Tipo</label>
                                <input type="text" name="displayType" id="displayType"
                                    value="<%= mobile.displayType %> ">

                            </div>
                            <div class="centrar">
                                <label for="displaySize">Display Tamaño</label>
                                <input type="text" name="displaySize" id="displaySize"
                                    value="<%= mobile.displaySize %> ">

                            </div>
                            <div class="centrar">
                                <label for="displayResolution">Display Resolución</label>
                                <input type="text" name="displayResolution" id="displayResolution"
                                    value="<%= mobile.displayResolution %> ">

                            </div>
                            <div class="centrar">
                                <label for="density">Densidad</label>
                                <input type="text" name="density" id="density" value="<%= mobile.density %> ">

                            </div>
                            <div class="centrar">
                                <label for="protection">Protección</label>
                                <input type="text" name="protection" id="protection" value="<%= mobile.protection %> ">

                            </div>


                        </div>
                        <div class="imagenes bloque">

                            <div>
                                <h2 class="centrar-titulos"> Imagenes</h2>
                            </div>
                            <div class="subir-imagen centrar">
                                <input class="centrar subir-img" type="file" id="image" name="image" multiple>

                            </div>

                        </div>
                        <div class="centrar agregar-producto"><button type="submit">Editar producto</button></div>
                        <!--<div class="centrar"><button type="submit" class="boton-enviar">Agregar</button></div>-->
                    </form>
                    <!---->








                </div>
            </main>


            <%- include('../partials/footer') %>

    </body>

</html>