<!DOCTYPE html>
<html lang="en">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<%- include('../partials/head',{title:"Admin categproas"}) %>

  <body class="adminTable">
    <%- include('./partials/header') %>
      <main>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Categoria</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody id="table">
              <button id="agregar" class="btn btn-primary">Agregar Categoria nueva</button>
              <% categories.forEach(category=> { %>
                <tr>
                  <th scope="row">
                    <%= category.id %>
                  </th>
                  <td>
                    <p id="category-p"><%= category.name %></p>
                    <form class="ocultar" id="form-edit" action="/admin/categories/update/<%= category.id %>?_method=PUT" method="POST">
                    <input type="text" name="name" id="input-edit" value= "<%= category.name %>">
                    <button id="update" class="btn btn-sm mt-2 btn-primary" type="submit">Editar categoria</button>
                    <p id="edit-error" class="text-danger small"><%= locals.errores && errores.name ? errores.name.msg : null %></p>
                    </form>
                  </td>

                  <td class="d-flex">
                    <a id="edit-button" class="btn btn-sm btn-success" href="/">Editar</a>
                    <div>
                      <form action="/admin/categories/delete/<%= category.id %>?_method=DELETE" method="POST"
                        id="eliminar">
                        <button class="btn btn-sm btn-danger" type='submit'>Eliminar</button>
                      </form>
                    </div>
                  </td>
                </tr>

                <% }) %>
            </tbody>
          </table>
        </div>
      </main>
      <%- include('../partials/footer') %>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
          crossorigin="anonymous"></script>
        <script src="/javascripts/adminCategories.js"></script>
  </body>

</html>