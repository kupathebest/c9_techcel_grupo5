                <i class="fas fa-check success ocultar" id="icono-success-email"></i>
                <i class="fas fa-exclamation-circle otra ocultar" id="icono-error-password"></i>
            </div>
        </div> 
    </div>
    <div class="mensaje">
    <span class=""><%= locals.errores && errores.email ? errores.email.msg : null %> </span>
    <span id="span-error"></span>
</div>
    <div class= "recordarId">
        

        <label name="recordar" id="recordar" > <input type="checkbox" name="recordar" id="recordar">
            RECORDAR ID           
        
        </label>
    </div>   
    

    <div class="inicio-sesion">
        
         <button type="submit">Iniciar sesion</button>
   
         <a href="/users/register"><button type="button">Crear cuenta</button></a>
   
        </div>

    </form>
</main>

<%-include('../partials/footer')  %> 
