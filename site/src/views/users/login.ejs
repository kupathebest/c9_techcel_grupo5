<!DOCTYPE html>
<html lang="es">
<%-include('../partials/head',{title:"INICIAR SESION"})  %> 
<body class="login">

    <%-include('../partials/header')  %> 

    <main class="">
     <form action="" method="POST" id= "form-login">

    <div class="box-inicia">
        
        <h3>INICIA SESION</h3>
    </div>   

    <div class="box-cuenta">

        <h3>INICIA SESION EN TU CUENTA</h3>

    </div>

    <div class= "box-techcel">
        <h3>TECHCEL</h3>
    </div>

        <div class="box-form">
            <div class="container-input">
                <input class="email" type="text" name="email" id="email" placeholder= "Correo electronico">
