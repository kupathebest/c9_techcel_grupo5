                <div class="container-icons">
                    <i class="fas fa-check success ocultar" id="icono-success-email"></i>
                    <i class="fas fa-exclamation-circle errorDos ocultar" id="icono-error-email"></i>
                </div>
            </div>
            
    </div>
    
    <div class="box-form">
        <div class="container-input">
            <input class="password" type="password" name= "password" id= "password"placeholder= "ContraseÃ±a">
            <span id="password-error"></span>
